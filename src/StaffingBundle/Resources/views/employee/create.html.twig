{% extends 'layout/layout.html.twig' %}

{% block title %}Employee:create{% endblock %}

{% block body %}

    <div class="page-header">
        <h2>Employee Creation</h2>           
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">     
            <div class="panel panel-default">
                <div class='panel-heading'> staff enrollment</div>
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.firstname) }}
                    </div>     
                    <div class="form-group">
                        {{ form_row(form.middlename) }}
                    </div>                         
                    <div class="form-group">
                        {{ form_row(form.lastname) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.gender) }}
                    </div>                    
                    <div class="form-group">
                        {{ form_row(form.isactive) }}
                    </div>  
                    <div class="form-group">
                        {{ form_row(form.isfulltime) }}
                    </div>                                        
                    <div class="form-group">
                        {{ form_row(form.hiredate) }}
                    </div>     
                    <div class="form-group">
                        {{ form_row(form.supervisor) }}
                    </div>   
                    <div class="form-group">
                        {{ form_row(form.position) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.department) }}
                    </div>                  
                    <div class="form-group">
                        {{ form_row(form.profilepicture) }}
                    </div>                                        
                    <button type="submit" class="btn btn-primary">Save</button>
                    {{ form_end(form) }}
                </div>
            </div>            
        </div>
    </div>
{% endblock %}
