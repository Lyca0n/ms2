{% extends 'layout/layout.html.twig' %}

{% block title %}CallcenterBundle:Position:index{% endblock %}
{% block body %}

    <div class="page-header">
        <h2>Employee Position Management</h2>           
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-2 ">
            <a href="{{ url('position_create')}}" class="btn btn-primary">New</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> Job code </th>
                        <th> Name </th>
                        <th> Description </th>
                        <th> Paylevel </th>

                    </tr>
                </thead>
                <tbody>
                    {% for position in positions %}
                        <tr>
                            <td>{{position.jobcode}}</td>
                            <td>{{position.name}}</td>
                            <td>{{position.description}}</td>
                            <td>{{position.paylevel}}</td>
                            
                            <td>
                                <div class="btn-group">
                                        <button class="btn btn-primary dropdown-toggle" href="#" data-toggle="dropdown">
                                        <span class='glyphicon glyphicon-plus'></span> <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu stay-open pull-right" role="menu" style="padding: 15px; min-width: 300px;">                                          
                                        <li><a href="{{ path('position_edit', {'id': position.id}) }}">Edit</a></li>  
                                        <li><a href="{{ path('position_delete', {'id': position.id}) }}">Delete</a></li>  
                                        </ul>
                                </div>
                            </td>                            
                        </tr>
                    {%endfor%}    
                </tbody>        
            </table>   
        </div>        
    </div>            
{% endblock %}
