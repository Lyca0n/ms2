{% extends 'layout/layout.html.twig' %}

{% block title %}CallcenterBundle:ServiceUnit:index{% endblock %}

{% block body %}

    <div class="page-header">
        <h2>Service Units</h2>           
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-2 ">
            <a href="{{ url('unit_create')}}" class="btn btn-primary">New</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> Name </th>
                        <th> Description </th>
                        <th> Contact </th>
                        <th> Department </th>
                        <th> Stakeholder </th>                        
                        <th> Options </th>                             
                    </tr>
                </thead>
                <tbody>
                    {% for unit in units %}
                        <tr>
                            <td>{{unit.name}}</td>
                            <td>{{unit.description}}</td>
                            <td>{{unit.contact}}</td>
                            {% if unit.department %}
                            <td>{{unit.department.name}}</td>                                 
                            {% endif %}
                            {% if unit.stakeholder %}
                            <td>{{unit.stakeholder.name}}</td>                                
                            {% endif %}                            
                            <td>
                                <div class="btn-group">
                                        <button class="btn btn-primary dropdown-toggle" href="#" data-toggle="dropdown">
                                        <span class='glyphicon glyphicon-plus'></span> <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu stay-open pull-right" role="menu" style="padding: 15px; min-width: 300px;">                                          
                                        <li><a href="{{ path('unit_edit', {'id': unit.id}) }}">Edit</a></li>  
                                        <li><a href="{{ path('unit_delete', {'id': unit.id}) }}">Delete</a></li>  
                                        </ul>
                                </div>
                            </td>                            
                        </tr>
                    {%endfor%}    
                </tbody>        
            </table>   
        </div>        
    </div>            
{% endblock %}
